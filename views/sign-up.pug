extends layout

block content
  h1 Sign Up

  form(method='POST' action='')
    label(for='first_name' class='first_name') First Name:
    input(type='text' name='first_name' value=(undefined===user ? '' : user.first_name))

    label(for='last_name' class='last_name') Last Name:
    input(type='text' name='last_name' value=(undefined===user ? '' : user.last_name))

    label(for='email' class='email') E-Mail:
    input(type='email' name='email' value=(undefined===user ? '' : user.username))

    label(for='password' class='password') Password:
    input(type='password' name='password' value=(undefined===user ? '' : user.password))

    label(for='confirmPassword' class='confirmPassword') Confirm Password:
    input(type='password' name='confirmPassword' value=(undefined===user ? '' : user.confirmPassword))

    button(type='submit') Submit

    if errors
      ul
        for error in errors
          li!= error.msg